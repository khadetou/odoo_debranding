<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!--
        Custom debranded About section template.
        Replaces the original res_config_edition widget template.
    -->
    <div t-name="odoo_debranding.res_config_edition">
        <Setting addLabel="false">
            <div class="user-heading">
                <h3 class="px-0">
                    Version <t t-esc="serverVersion"/>
                </h3>
            </div>
            <div>
                <div class="tab-content">
                    <div role="tabpanel" id="settings" class="tab-pane active text-muted o_web_settings_compact_subtitle">
                        <!-- Branding removed by odoo_debranding module -->
                    </div>
                </div>
            </div>
        </Setting>
    </div>

</templates>